@model PagNet.Application.Models.AlertaNotificacaoPagRecebVM

<div class="notBtn" href="#">
    <!--Number supports double digets and automaticly hides itself when there is nothing between divs -->
    @if (Model.qtTotalAlerta > 0)
    {
        <div class="number">@Model.qtTotalAlerta</div>
    }
    <i class="fa fa-bell-o" aria-hidden="true" id="btnFaNotificationBell"></i>
    @if (Model.qtTotalAlerta > 0)
    {
        <div class="box">
            <div class="display">
                <div class="cont">
                    <!-- Fold this div and try deleting evrything inbetween -->
                    @for (int i = 0; i < Model.listaAlertas.Count; i++)
                    {
                        if (Model.listaAlertas[i].Quantidade > 0)
                        {
                            <div class="sec new">
                                <a href="#" onclick="@Model.listaAlertas[i].linkAcesso">
                                    <div class="txt">@Model.listaAlertas[i].Descricao</div>
                                </a>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="JanelaModal" tabindex="-1" role="dialog" aria-labelledby="JanelaModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="FechaJanelaModal();" data-dismiss="modal">&times;</button>
            </div>

            <div id="modalStatusItens">

            </div>
        </div>
    </div>
</div>


<script src="@Url.Action("GetClassJs", "ConsultasGenericas", new { area = "Generico", id= "Home" , classe = "ScriptsIniciais.js", sid = ViewBag.Sid })"></script>
