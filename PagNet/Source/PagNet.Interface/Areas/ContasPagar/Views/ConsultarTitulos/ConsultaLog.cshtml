@model IList<PagNet.Application.Models.LogTituloVM>
@using PagNet.Interface.Helpers

<div class="modal-body">
    <div class="table-responsive">
        <table id="GridLog" class="table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th width="0%" style="display:none;"></th>
                    <th width="13%" style="text-align: center;">@Html.DisplayNameFor(model => model.FirstOrDefault().DATINCLOG)</th>
                    <th width="17%" style="text-align: left;">@Html.DisplayNameFor(model => model.FirstOrDefault().NMUSUARIO)</th>
                    <th width="30%" style="text-align: left;">@Html.DisplayNameFor(model => model.FirstOrDefault().DESCLOG)</th>
                    <th width="20%" style="text-align: left;">@Html.DisplayNameFor(model => model.FirstOrDefault().STATUS)</th>
                    <th width="10%" style="text-align:center;">@Html.DisplayNameFor(model => model.FirstOrDefault().DATREALPGTO)</th>
                    <th width="10%" style="text-align:right;">@Html.DisplayNameFor(model => model.FirstOrDefault().VALLIQ)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td width="0%" style="display:none;">
                                @Html.DisplayFor(item => item[i].CODTITULO_LOG)
                            </td>
                            <td width="13%" style="text-align:center;">
                                @Html.DisplayFor(item => item[i].DATINCLOG)
                            </td>
                            <td width="17%" style="text-align:left;">
                                @Html.DisplayFor(item => item[i].NMUSUARIO)
                            </td>
                            <td width="30%" style="text-align:left;">
                                @Html.DisplayFor(item => item[i].DESCLOG)
                            </td>
                            <td width="20%" style="text-align:left;">
                                @Html.DisplayFor(item => item[i].STATUS)
                            </td>
                            <td width="10%" style="text-align:center;">
                                @Html.DisplayFor(item => item[i].DATREALPGTO)
                            </td>
                            <td width="10%" style="text-align:right;">
                                @Html.DisplayFor(item => item[i].VALTOTAL)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
</div>

@* Rotina criada para apresentar alertas vindas do ViewData do controler *@
@Html.ShowError()
