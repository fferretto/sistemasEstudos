@model IList<PagNet.Interface.Areas.Cadastros.Models.DadosLogModal>
@using PagNet.Interface.Helpers

<div class="modal-body">
    <div class="table-responsive">
        <table id="ListaLog" class="table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th width="10%">Data</th>
                    <th width="35%">Usuário</th>
                    <th width="55%">Descrição</th>

                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td width="10%">
                                @Html.DisplayFor(item => item[i].dataLog)
                            </td>
                            <td width="35%">
                                @Html.DisplayFor(item => item[i].nomeUsu)
                            </td>
                            <td width="55%">
                                @Html.DisplayFor(item => item[i].descLog)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
</div>

@* Rotina criada para apresentar alertas vindas do ViewData do controler *@
@Html.ShowError()

