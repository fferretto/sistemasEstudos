@model IList<PagNet.Application.Models.ConsultaUsuario>
@using PagNet.Interface.Helpers

<div class="modal-body">
    <div class="table-responsive">
        <table id="example" class="table" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().nmusuario)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Email)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().login)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(item => item[i].nmusuario)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item[i].Email)
                        </td>
                        <td>
                            @Html.DisplayFor(item => item[i].login)
                        </td>
                        <td align='center'>
                            <a href="@Url.Action("Index", "Usuarios", new {area = "Cadastros", id = Model[i].CodUsuario, sid = ViewBag.Sid})">
                                <div class="btn btn-primary btn-xs">
                                    <i class="fa fa-edit "></i>
                                </div>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
</div>

