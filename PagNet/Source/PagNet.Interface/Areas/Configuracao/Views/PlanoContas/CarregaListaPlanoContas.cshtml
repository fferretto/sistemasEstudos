<div class="panel panel-default">
    <div class="panel-body">
        <div class="">
            @*@Html.CampoRecursivoPlanoConas(Model.listaPlanoContas, 8)*@
            <div class="table-responsive">
                <table id="gridListaPlanoContas" class="table" cellspacing="0" width="100%">
