                            <th width="0%" style="display:none;"></th>
                        </tr>
                    </thead>
                    @if (Model != null)
                    {
                        @Html.CampoRecursivoPlanoConas(Model.listaPlanoContas, 8)
                    }
                </table>
            </div>

        </div>

    </div>
</div>

@Html.ShowError()
<script>

    function carregaPagina() {
        $.unblockUI();

        $('#gridListaPlanoContas').DataTable({
            dom: 'Brti',
            //pageLength: 100,
            buttons: [
                'excel'
            ],
            ordering: false
        });
    }

    $(window).load(carregaPagina());


</script>

