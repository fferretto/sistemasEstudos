@model PagNet.Application.Models.FiltroPlanoContasVm
@using PagNet.Interface.Helpers

@{
    ViewBag.Title = "Conta Corrente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.CodUsuario)
    @Html.HiddenFor(x => x.acessoAdmin)

    <div class="panel panel-default">
        <div class="panel-heading">
            <div style="font-weight: bold;font-size:15px;">
                <b>Configuração de Plano de Contas</b>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-8" id="FiltroEmpresa" style="display:none">
                    @Html.DDLBootstrapFor(model => model.codigoEmpresa, Model.nomeEmpresa, "/Generico/CadastrosDiversos/GetEmpresa/", 0)
                </div>
                <div class="col-lg-12">
                </div>
                <div class="form-group col-md-2  pull-right">
                    <div style="margin-top: 19px">
                        <div id="btnNovoPlanoContas" class="btn btn-success" onclick="IncluiNovoPlanoContas();">Incluir Novo Plano de Contas</div>
                    </div>
                </div>
            </div>
            <div class="col-md-12" style="margin-top:2%;">
                <div id="ListaPlanoContas">
                    <div id="modalListaPlanoContas">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="Localizar" tabindex="-1" role="dialog" aria-labelledby="Localizar" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div id="modal">

                </div>
            </div>
        </div>
    </div>

}

@*<script src="~/js/Scripts/Cadastros/ContaCorrente.js"></script>*@
<script src="@Url.Action("GetClassJs", "ConsultasGenericas", new { area = "Generico", id= "Configuracao" , classe = "PlanoContas.js", sid = ViewBag.Sid })"></script>

@* Rotina criada para apresentar alertas vindas do ViewData do controler *@
@Html.ShowError()
